<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
				
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context.xsd
						
						http://www.springframework.org/schema/aop
						http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
						
						"><!-- 添加aop的namespace 并指定地址 -->
		
	<context:annotation-config />
	<context:component-scan base-package="org.junjun.spring.charpter4" />
	<aop:aspectj-autoproxy />
	
	<!-- 如果需要使用Annoation的方式 需要在context中注入一个bean: AnnotationAwareAspectJAutoProxyCreator.但是用 <aop:aspectj-autoproxy/> 就能自动注入一个 -->
	<aop:aspectj-autoproxy />
	
	<!-- 使用了constructor-arg 从构造方法注入参数，使用 Juggler( int beanBags)构造函数  -->
	<bean id="dukee" class="org.junjun.spring.charpter2.first_competetion.Juggler">
		<constructor-arg value="15"></constructor-arg> 
	</bean>
	
	<bean id="volunteer" class="org.junjun.spring.charpter4.second_apoAnnotation.Volunteer" />
	
</beans>