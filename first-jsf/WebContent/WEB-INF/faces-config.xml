<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
    
    <!-- temprature test -->
	<managed-bean>
		<managed-bean-name>temperatureConvertor</managed-bean-name>
		<managed-bean-class>de.vogella.jsf.first.model.TemperatureConvertor</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>de.vogella.jsf.first.model.UserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
	    <from-view-id>/index_conventor.jsp</from-view-id>
	    <navigation-case>
	    <from-outcome>newFriend</from-outcome>
	    <to-view-id>/conventors/Convertor.jsp</to-view-id>
	    </navigation-case>
	    
	    <navigation-case>
	    <from-outcome>oldFriend</from-outcome>
	     <to-view-id>/conventors/ConvertorA.jsp</to-view-id>
	    </navigation-case>
    </navigation-rule>
    
    
	<!-- chinaMap test -->
	<managed-bean>
		<managed-bean-name>chinaMapBean</managed-bean-name>
		<managed-bean-class>com.buptjunjun.mapNav.ChinaMapBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
    <navigation-rule>
	    <from-view-id>/index_mapNav.jsp</from-view-id>
	    <navigation-case>
	    <from-outcome>xinjiang</from-outcome>
	    <to-view-id>/mapNavigation/xinjiang.jsp</to-view-id>
	    </navigation-case>
	    
	    <navigation-case>
	    <from-outcome>xizang</from-outcome>
	     <to-view-id>/mapNavigation/xizang.jsp</to-view-id>
	    </navigation-case>
    </navigation-rule>
    
    <!-- login test -->
    <managed-bean>  <!-- 用于依赖注入 -->
        <managed-bean-name>userService</managed-bean-name>
        <managed-bean-class> com.buptjunjun.login.model.serviceImpl.UserServiceImpl</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>
    <managed-bean>
		<managed-bean-name>bbUserBean</managed-bean-name>
		<managed-bean-class>com.buptjunjun.login.view.bb.BBUserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property> <!-- 依赖注入功能 -->
			<property-name>userService</property-name>
			<value>#{userService}</value>
		</managed-property>
	</managed-bean>
    <managed-bean>
    	<managed-bean-name>form</managed-bean-name>
    	<managed-bean-class>com.buptjunjun.form.Form</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>leftBB</managed-bean-name>
    	<managed-bean-class>com.buptjun.p5.LeftBB</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>rightBB</managed-bean-name>
    	<managed-bean-class>com.buptjun.p5.RightBB</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
	
	<navigation-rule>
	    <from-view-id>/index_login.jsp</from-view-id>
	    <navigation-case>
	    <from-outcome>success</from-outcome>
	    <to-view-id>/login/welcome.jsp</to-view-id>
	    </navigation-case>
    </navigation-rule>
	
</faces-config>
