<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">   
    
    <!-- temprature test -->	
	<navigation-rule>
	    <from-view-id>/index_conventor.jsp</from-view-id>
	    <navigation-case>
	    <from-outcome>newFriend</from-outcome>
	    <to-view-id>/conventors/Convertor.jsp</to-view-id>
	    </navigation-case>
	    
	    <navigation-case>
	    <from-outcome>oldFriend</from-outcome>
	     <to-view-id>/conventors/ConvertorA.jsp</to-view-id>
	    </navigation-case>
    </navigation-rule>
    
    
	<!-- chinaMap test -->	
    <navigation-rule>
	    <from-view-id>/index_mapNav.jsp</from-view-id>
	    <navigation-case>
	    <from-outcome>xinjiang</from-outcome>
	    <to-view-id>/mapNavigation/xinjiang.jsp</to-view-id>
	    </navigation-case>
	    
	    <navigation-case>
	    <from-outcome>xizang</from-outcome>
	     <to-view-id>/mapNavigation/xizang.jsp</to-view-id>
	    </navigation-case>
    </navigation-rule>
    
    <!-- login test -->	
	<navigation-rule>
	    <from-view-id>/index_login.jsp</from-view-id>
	    <navigation-case>
	    <from-outcome>success</from-outcome>
	    <to-view-id>/login/welcome.jsp</to-view-id>
	    </navigation-case>
    </navigation-rule>
   
<navigation-rule>
	    <from-view-id>/6/hello.jsp</from-view-id>    
	    <navigation-case>
	    <from-outcome>newFriend</from-outcome>
	    <to-view-id>/6/howDoYouDo.jsp</to-view-id>
	    </navigation-case>
	    
	    <navigation-case>
	    <from-outcome>oldfriend</from-outcome>
	    <to-view-id>/6/howAreYou.jsp</to-view-id>
	    </navigation-case>
    </navigation-rule>
	
	<navigation-rule>
	<description>Navigation from the hello page.</description>
	<icon>
		<large-icon>/images/chinaMap.jpg</large-icon>
	</icon>
	<from-view-id>/JSFInAction/chapter1/1-1-hello.jsp</from-view-id>
	<navigation-case>
	<from-outcome>success</from-outcome>
		<to-view-id>/JSFInAction/chapter1/1-1-goodbye.jsp</to-view-id>
	</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>ProjectTrack for login.jsp</display-name>
		<from-view-id>/JSFInAction/charpter8/login.jsp</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/JSFInAction/charpter8/login.jsp</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/JSFInAction/charpter8/inbox.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
